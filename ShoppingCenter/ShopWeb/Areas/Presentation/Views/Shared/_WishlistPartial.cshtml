@using ShopCore.Enum
@using ShopCore.Helper
@using ShopData.Model

@{
    var wishlist = SessionHelper.GetSession<List<CartDetail>>(SessionName.Wishlist) ?? new List<CartDetail>();
    var count = wishlist.Count;
}

<a href="@Url.Action("Index","Wishlist")" title="Danh mục yêu thích">
    <i class="fa fa-heart"></i>
    <span class="counter-wishlist">@count</span>
</a>
