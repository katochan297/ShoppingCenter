@using ShopCore.Enum
@using ShopData.Model
@{
    List<Menu> lstMenu = ViewBag.ListMenu;
    var active = (int)(Session[SessionName.MenuActivity] != null 
        ? Session[SessionName.MenuActivity] 
        : 0);
}

<header class="menu-standar">
    <!--Menu-->
    <div class="row">
        <div class="col-lg-12">
            <div class="flat-mega-menu">
                <!-- flat-mega-menu class -->
                <label for="mobile-button"> <i class="fa fa-bars"></i> </label>
                <!-- mobile click button to show menu -->
                <input id="mobile-button" type="checkbox">
                <ul class="collapse">
                    <!-- collapse class for collapse the drop down -->
                    <li class="title logo">
                        <a href="@Url.Action("Index","Home")">
                            <img src="~/Areas/Presentation/Content/img/content-general/logo.png" alt="Image Logo">
                        </a>
                    </li>
                    <!-- website title class -->

                    @foreach (var menu in lstMenu)
                    {
                        var isActive = menu.MenuID == active ? "activated" : "";

                        <li class="@isActive">
                            <a href="@menu.Path">@menu.Title</a>
                            @if (menu.Menu1 != null && menu.Menu1.Count > 0)
                            {
                                <div class="drop-down full-width hover-fade">
                                    @foreach (var item in menu.Menu1)
                                    {
                                        <ul>
                                            <li>
                                                <h3>@item.Title</h3>
                                            </li>
                                            @foreach (var sub in item.Menu1)
                                            {
                                                <li><a href="@sub.Path">@sub.Title</a></li>
                                            }
                                        </ul>
                                    }
                                </div>
                            }
                        </li>
                    }

                    <li class="bag-cart">
                        <a href="#"><img src="~/Areas/Presentation/Content/img/content-general/cart.png" alt="cart"><span class="counter-cart">1</span></a>
                        <!-- Cart -->
                        <ul class="drop-down hover-fade">
                            <li>
                                <!--Header panel-->
                                <div class="header-bag"><p>1 item (s) added to your  bag</p></div>
                                <!--Header panel-->
                                <!--body panel-->
                                <div class="body-bag">
                                    <img src="~/Areas/Presentation/Content/img/products/product-01.png" alt="">
                                    <div class="content-body-bag">
                                        <h4 class="product-bag">YX  Black T-Shirt</h4>
                                        <p><span class="price">36.00</span></p>
                                    </div>
                                </div>
                                <div class="total-bag center"><p>subtotal <span class="price">36.00</span></p></div>
                                <!--body panel-->
                                <!--Footer panel-->
                                <div class="footer-bag text-uppercase">
                                    <div class="view-bag"><a href="#">view cart</a></div>
                                    <div class="check-bag"><a href="#">checkout</a></div>
                                </div>
                                <!--Footer panel-->
                            </li>
                        </ul>
                        <!-- Cart -->
                    </li>
                    <li class="search-bar">
                        <a href="#"><i class="fa fa-search"></i></a>
                        <ul class="drop-down hover-fade searching">
                            <li>
                                <form method="post" action="#">
                                    <div class="form-group">
                                        <input type="email" class="form-control" id="InputEmail1" placeholder="write you're searching here">
                                    </div>
                                    <button type="submit" class="boton-dark">search</button>
                                </form>
                            </li>
                        </ul>
                    </li>

                    <li class="register-form"><a href="#">Register</a></li>
                    <li class="login-form">
                        <a href="#">Login</a>
                        <!-- login form -->
                        <ul class="drop-down hover-fade left">
                            <li>
                                <form class="loginform">
                                    <div class="form-group">
                                        <label for="InputEmail">email</label>
                                        <input type="email" class="form-control" id="InputEmail" placeholder="">
                                    </div>
                                    <div class="form-group">
                                        <label for="InputPassword1">password</label>
                                        <input type="password" class="form-control" id="InputPassword1" placeholder="">
                                    </div>
                                    <div class="boton-dark"><a href="#">login</a></div>
                                    <a href="#" class="pss">Lost password?</a>
                                </form>
                            </li>
                        </ul>
                        <!-- login form -->
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!--Menu-->
</header>