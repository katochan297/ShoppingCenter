@using PagedList
@using PagedList.Mvc
@using ShopCore.Enum
@using ShopCore.Helper
@model IPagedList<ShopData.Model.MaskProduct>

<div class="product producthover row top-mini">
    @foreach (var item in Model)
    {
        <!--Item-->
        <div class="col-lg-4 col-md-3 col-sm-4">
            <div class="product-hover">
                    <!--Image Product-->
                    <div class="image-product">
                        <img src="~/Areas/Presentation/Content/img/products/product-05.png" alt="">
                    </div>
                    <!--Image Product-->
                    <!--Description Product-->
                    <div class="text-uppercase hover-description center">
                        <h4>
                            <a href="@Url.Action("MaskDetail", "Mask", new { id = item.ProductID })">
                                @item.ProductName
                            </a>
                        </h4>
                        <p>@Utilities.FormatAmountToVnd(item.Price)</p>
                        <button type="submit" class="boton-dark top-mini" id="btnAddCartQuickly" onclick="AddCartQuickly(@item.ProductID);">
                            Thêm vào giỏ
                        </button>
                    </div>
                    <!--Description Product-->
            </div>
        </div>
        <!--Item-->
    }
</div>

<div class="row">
    <!--Pagination-->
    <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="top pagination-view">
            <p></p>
        </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-6 pag-right">
        <ul class="pagination top">
            @*<li><a href="#" class="active">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">NEXT</a></li>
                <li><a href="#" class="next"><i class="fa fa-angle-right"></i></a></li>*@
            @Html.PagedListPager(Model, page => Url.Action("Index", "Mask", new { page }))
        </ul>
    </div>
    <!--Pagination-->
</div>