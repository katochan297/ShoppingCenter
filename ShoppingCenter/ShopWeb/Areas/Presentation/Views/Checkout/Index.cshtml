<div class="paddings">
    <div class="container">
        <!--BreadCrumbs-->
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-title">Thanh Toán</li>
                </ol>
            </div>
        </div>
        <!--BreadCrumbs-->

        <div class="margin-top-section">
            <div class="row">
                <div class="col-lg-6">
                    <form class="row form-checkout" action="#">
                        <!--Name-->
                        <div class="form-group col-lg-12">
                            <label for="InputName">First Name*</label>
                            <input type="text" class="form-control" name="name" id="InputName" placeholder="" required="">
                        </div>
                        <!--Name-->
                        <!--Country-->
                        <div class="form-group col-lg-12">
                            <label>Country*</label>
                            <div class="selector">
                                <select class="guests-input">
                                    <option value="selected" selected>Select your Country</option>
                                    <option value="Colombia">Colombia</option>
                                    <option value="Peru">Peru</option>
                                    <option value="Bolivia">Bolivia</option>
                                </select>
                                <span class="custom-select">Select your Country</span>
                            </div>
                        </div>
                        <!--Country-->
                        <!--Address-->
                        <div class="form-group col-lg-12">
                            <label for="address">Address*</label>
                            <input type="text" class="form-control" name="address" id="address" placeholder="" required="">
                        </div>
                        <!--Address-->
                        <!--Town/City-->
                        <div class="form-group col-lg-12">
                            <label for="City">Town/City*</label>
                            <input type="text" class="form-control" name="City" id="City" placeholder="" required="">
                        </div>
                        <!--Town/City-->
                        <!--State-->
                        <div class="form-group col-lg-6">
                            <label for="InputState">State</label>
                            <input type="text" class="form-control" name="InputState" id="InputState" placeholder="">
                        </div>
                        <!--State-->
                        <!--PostCode-->
                        <div class="form-group col-lg-6">
                            <label for="PostCode">PostCode*</label>
                            <input type="text" class="form-control" name="PostCode" id="PostCode" placeholder="" required="">
                        </div>
                        <!--PostCode-->
                        <!--Email Address-->
                        <div class="form-group col-lg-6">
                            <label for="InputEmailAdress">Email Address*</label>
                            <input type="email" class="form-control" name="email" id="InputEmailAdress" placeholder="" required="">
                        </div>
                        <!--Email Address-->
                        <!--Email Address-->
                        <div class="form-group col-lg-6">
                            <label for="Phone">Phone*</label>
                            <input type="number" class="form-control" name="email" id="Phone" placeholder="" required="">
                        </div>
                        <!--Email Address-->

                        <div class="col-lg-12 checkbox-shipping">
                            <label><input type="checkbox" value=""> Create Account</label>
                            <label><input type="checkbox" value="" checked="checked"> Shipping address is the same like Billing Address</label>
                        </div>

                        <!--Message-->
                        <div class="form-group col-lg-12 top-mini">
                            <label for="notes">Order Notes</label>
                            <textarea class="form-control" name="message" id="notes" placeholder="Notes about your delivery, e. g.  special notes for delivery."></textarea>
                        </div>
                        <!--Message-->
                    </form>
                </div>
                <div class="col-lg-6">
                    <div class="bg-gray order-resume">
                        <div class="text-uppercase">
                            <h3>Your Order</h3>
                            <p class="top"><b>products<span class="float-right">total</span></b></p>
                            <hr>
                            <p class="item-detail">YX  Black T-Shirt<span class="amount">x1</span><span class="price float-right">36.00</span></p>
                            <p class="item-detail">Y4  White Jersey<span class="amount">x1</span><span class="price float-right">36.00</span></p>
                            <hr>
                            <p>subtotal<span class="float-right price">72.00</span></p>
                            <p>SHIPPING AND HANDLING:<span class="float-right">Free Shipping</span></p>
                            <hr>
                            <p class="total">Order total<span class="float-right price">72.00</span></p>
                            <hr>
                        </div>

                        <div class="checkbox-shipping top">
                            <label><input type="checkbox" value="" checked="checked"> Direct Bank Transfer</label>
                            <p>Make your payment directly into our bank account. Please use your Order ID as the payment reference. Your order wont be shipped until the funds have cleared in our account.</p>
                            <label><input type="checkbox" value=""> Check Payment</label>
                            <label><input type="checkbox" value=""> Paypal</label>
                        </div>
                        <button type="submit" value="Submit" class="boton-dark bottom-mini top text-uppercase">Place Order</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>